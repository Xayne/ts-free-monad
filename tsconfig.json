{
    "include": [
        "src", "examples"
    ],
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "lib": [
            "esnext", "DOM"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
    }
}
